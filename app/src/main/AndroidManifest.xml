<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Assgiment"
        tools:targetApi="31">
        <activity
            android:name=".Screen.CartScreen"
            android:exported="false"
            android:label="@string/title_activity_cart_screen"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.TrangCaNhan"
            android:exported="false"
            android:label="@string/title_activity_trang_ca_nhan"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.Favourite"
            android:exported="false"
            android:label="@string/title_activity_favourite"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.ProductDetail"
            android:exported="false"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.Register"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Assgiment" />
        <activity
            android:name=".Screen.Welcome"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.Assgiment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Assgiment" />
    </application>

</manifest>